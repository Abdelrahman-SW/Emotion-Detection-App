<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:background="@drawable/tab_layout_background"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:layout_collapseMode="parallax"
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/newPrimaryColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed|snap">


            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:drawablePadding="16dp"
                android:drawableTop="@mipmap/ic_app_icon_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"/>





        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:drawableEnd="@drawable/ic_baseline_linked_camera_24"
        android:drawablePadding="16dp"
        android:padding="4dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:id="@+id/ipCamera"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Ip Camera" />

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:drawableEnd="@drawable/ic_baseline_videocam_24"
        android:drawablePadding="16dp"
        android:padding="4dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="real time" />

    <Button
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:drawableEnd="@drawable/ic_baseline_camera_alt_24"
        android:drawablePadding="16dp"
        android:padding="4dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="take" />

    <Button
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:drawableEnd="@drawable/gallery"
        android:drawablePadding="16dp"
        android:padding="4dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="upload" />
</LinearLayout>